/* Customize Collection for courses */

.kit-collection .collection-list {
    width: 40%;
    margin-top: 30px;
    margin: 30px auto 0;
}

.kit-collection img.list-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 5px;
}

.kit-collection  .list-text-wrapper {
    position: absolute;
    top: 50%;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    width: 100%;
    height: 100%;
    padding: 30px;
    text-align: center;
    background: rgba(0, 0, 0, 0.9);
    opacity: 0;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    -webkit-transition: all 0.2s cubic-bezier(0, 0, 0, 0.94);
    transition: all 0.2s cubic-bezier(0, 0, 0, 0.94);
}

.kit-collection .list-title {
    color: #ffffff;
}

.kit-collection .list-meta {
    color: #ffffff;
}

@media screen and (max-width:768px){
  .kit-collection .collection-list {
      width: 70%;
  }
  .kit-collection .list-text-wrapper {
      position: unset;
      top: unset;
      background: unset;
      opacity: 1;
  }
  .kit-collection .list-title, .kit-collection .list-meta {
      color: #000;
  }
}
