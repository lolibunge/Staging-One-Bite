/* Consumable section */
.product-recommendations {
  max-width: 1000px;
  margin: auto;
  text-align: center;
  margin-top: 40px;
}

.product-recommendations h2 {
    font-size: 28px;
    text-transform: uppercase;
}

.product-recommendations ul {
  display: flex;
  column-gap: 10px;
      overflow-x: scroll;
}

.product-recommendations li {
  position: relative;
  box-shadow: 0px 0px 10px 0px #d6d6d6;
  border-radius: 5px;
}

.product-recommendations li img {
  border-radius: 5px;
}

.product-recommendations__product-info {
  position: absolute;
  top: 0;
  background: #000;
  color: #fff;
  width: 200px;
  display: none;
  flex-direction: column;
  justify-content: center;
  padding: 20px;
  border-radius: 5px;
  height:100%;
}
.product-recommendations__product-img {
    width: 200px;
}
.product-recommendations li:hover .product-recommendations__product-info {
  display: flex;
}

.product-recommendations__product-info p {
  margin: 0;
  font-size: 16px;
  line-height: 1.4;
}

.product-recommendations__product-info a {
  color: #fff;
  text-decoration: underline;
  margin-top: 10px;
}

@media screen and (max-width:480px){
  .product-recommendations li {
    margin: 14px 10px;
    height: 100%;
    position: unset;
    width:100%;
  }
  .product-recommendations ul {
    display: flex;
    column-gap: 10px;
   justify-content: flex-start;
    overflow-x: scroll;
  }
  .product-recommendations__product-img {
    width: 240px;
    height: 240px;
  }
  .product-recommendations li img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-radius: unset;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
  }

  .product-recommendations__product-info {
    width: 100%;
    position: unset;
    display: block;
    height: auto!important;
    color: #000;
    background: transparent;
    padding: 20px 0;
  }
  p.product-recommendations__learn-more {
    display: none;
  }
  .product-recommendations__product-info p {
    padding: 5px;
  }
}

